{
  "name": "graphql-api",
  "version": "1.0.0",
  "scripts": {
    "start": "yarn build && node lib/index.js",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "generate": "yarn generate:prisma",
    "generate:prisma": "prisma generate",
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest"
  },
  "dependencies": {
    "@graphql-yoga/node": "^2.6.0",
    "@pothos/core": "^3.11.0",
    "graphql": "^16.5.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.35",
    "eslint": "^7.32.0",
    "eslint-config-kodefox": "^1.2.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.8.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "~4.3.5"
  },
  "eslintConfig": {
    "extends": "kodefox"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "private": true
}
